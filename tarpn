   hostname -I | cut -d' ' -f1
   echo -n "Router info:"
   ip r | grep --text default
   echo "DNS server info:"
   cat /etc/resolv.conf
   echo "IP ports open for LISTEN"
   sudo lsof -i -P -n | grep --text LISTEN | grep --text IPv4
   exit 0;
fi

