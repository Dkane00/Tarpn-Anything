listnode() {
if grep --text -q "$1:NOT_SET" ${HOME}/node.ini;
then
   echo -n; #"$1 is disabled"
else
   if grep --text -q "$1:not_set" ${HOME}/node.ini
   then
      echo "$1 is disabled"
   else
      grep --text "$1" ${HOME}/node.ini;
   fi
fi
}
