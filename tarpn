   echo -e "\n\n\n\n###########################################################"
   echo "UNAME -a"
   uname -a
   echo
   echo -e "\n\n\n\n###########################################################"
   echo "vcgencmd version       GET FIRMWARE VERSION"
   vcgencmd version

   echo
   echo -e "\n\n\n\n###########################################################"
   echo "free -m     memory usage stats in megabytes"
