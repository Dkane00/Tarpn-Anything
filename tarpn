_value3APLUS1="9020e0"  #### Raspberry PI 3A+   Tadd June 25, 2023

_version_ok=0
_good_result=1

if [ $_value3APLUS1 == $_countb ]; then
     echo "PI 3A+ <<<" > ${HOME}/hardware.txt
    _is_raspberry_pi_3=1
    _version_ok=1
   fi


