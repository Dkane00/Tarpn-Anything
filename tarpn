    _is_raspberry_pi_3=1
    _version_ok=1
   fi


if [ $_value4BF == $_countb ]; then
     echo "type 4 B Rev 1.5 8GB <<<" > ${HOME}/hardware.txt
    _is_raspberry_pi_3=1
    _version_ok=1
   fi

if [ $_value4BE == $_countb ]; then
     echo "type 4 B Rev 1.5 4GB <<<" > ${HOME}/hardware.txt
    _is_raspberry_pi_3=1
